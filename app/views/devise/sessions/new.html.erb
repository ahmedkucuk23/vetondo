<div class="form_logins">
<div class="container" id="container form_login">
  <div class="">
    <div class="form-container sign-up-container">
      <form action="#">
        <h1>Create Account</h1>
        <div class="social-container">
          <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
          <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <span>or use your email for registration</span>
        <input type="text" placeholder="Name" />
        <input type="email" placeholder="Email" />
        <input type="password" placeholder="Password" />
        <button>Sign Up</button>
      </form>
    </div>
    <div class="form-container sign-in-container">
      <div class="form_signin">
        <h1>Sign in</h1>
        <div class="social-container">
          <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
          <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <span>or use your account</span>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
           <!-- <%= f.input :remember_me, :class => "checkbox_int", as: :boolean if devise_mapping.rememberable? %> -->
          </div>
          <div class="form-actions" style="margin-bottom: 20px;">
            <%= f.button :submit, "Log in", :class => "button_1" %>
            <div class="or_sign">
              <p style="margin: 10px;">or</p>
              <%= link_to "sign up", new_user_registration_path, :class => "button_1", :style => "width:100%; margin-bottom:20px;" %>
            </div>
          </div>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="coco">
    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1>Welcome Back!</h1>
          <p>To keep connected with us please login with your personal info</p>
          <button class="ghost" id="signIn">Sign In</button>
        </div>
        <div class="overlay-panel overlay-right">
          <h1>Welcome!</h1>
          <p>Click here to sign up and become vet/user.</p>
          <%= link_to "sign up", new_user_registration_path, :class => "ghost button", :id => "signUp" %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
