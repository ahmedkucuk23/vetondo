
<div class="container">
  <div class="vets">
    <div class="d-flex row justify-content-center align-items-center" style="margin-bottom: 15px;">
      <div class="vets_h col-lg-6">
        <h1 class="home_title">Find your Vet</h1>
      </div>
      <div class="become_vet col-lg-6">
        <%= link_to 'Become A Vet', new_vet_path, :class => "button_3_3", :style => "width:40%;" %>
      </div>
    </div>
    <div class="vets_all">

      <% Vet.all.each do |vet| %>
        <%= link_to vet_path(vet), class: "card_link" do %>
          <div class="vet_card d-flex row align-items-center">
            <div class="col-lg-2 col-md-2">

            </div>
            <div class="col-lg-7 col-md-7">
              <h3 class="vet_name"><%= vet.name %></h3>
              <p class="vet_gray"><strong><%= vet.speciality %></strong> | <%= vet.address %></p>
              <h5 class="vet_desc"><%= vet.description %></h5>
            </div>
            <div class="col-lg-3 col-md-3" style="text-align: center;">
              <h3 class="vet_name"><%= vet.price %> $</h3>
              <p class="price_min">Per minute</p>
              <button href="vet_path" class="button_call">Request A Call</button>
            </div>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
